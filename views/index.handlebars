<div>
    <h1 class="card z-depth-3 center-align">LATEST NEWS FROM NPR</h1>
</div>
<div class="row">
    <div class="col s2"></div>
    <div class="col s8 left-align">
        {{#each articles}}
        <div class="card-panel">
            <h4>{{this.title}}</h4>
            <a href="{{this._link}}" class="waves-effect waves-light btn">Read Article</a>
            <a href="#" class="waves-effect waves-light btn" id="comment-btn">Comment</a>
        </div>

        {{/each}}
    </div>
</div>